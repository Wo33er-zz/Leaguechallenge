table.content-table {
  border-spacing: 0;
  width: 100%;

  th,
  td {
    vertical-align: middle;
    text-align: left;
    padding: 5px;
    box-sizing: border-box;

    &:first-of-type {
      padding-left: 10px;
    }
    &:last-of-type {
      text-align: right;
      padding-right: 10px;
    }
  }
  th {
    background-color: #CFCFCF;
    color: #525252;
    font-size: 0.8em;
    text-transform: uppercase;
  }
  td {
    padding-top: 5px;
    padding-bottom: 5px;
  }
}
